<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
  <div class="span8">
    <% if @user.mynewdata.any? %>
      <h2>Experiments (<%= @user.mynewdata.count %>)</h2>
      <ol>

</div>
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="mynewdata">                         
    <thead>
      <tr>
        <th>Exp. no.</th>                          
        <th>Genus</th>
        <th>Species</th>
        <th>Strain</th>
        <th>Experiment Title</th>
        <th>Experiment Description</th>
        <th>Reference</th>
        <th>Submitted on</th>
        <th>Uploaded by</th>
        <th>Show data</th>
      </tr>
    </thead>

    <tbody>
      <% @user.mynewdata.each do |mynewdata| %>       
      <tr>
        <td><%= mynewdata.id %></td>
        <td><i><%= mynewdata.Genus %></i></td>  
        <td><i><%= mynewdata.Species %></i></td>
        <td><%= mynewdata.strain %></td>
        <td><%= mynewdata.title %></td>
        <td><%= mynewdata.descrip %></td>
        <td><%= mynewdata.ref %></td> 
        <td><%= mynewdata.created_at %></td> 
        <td><%= mynewdata.user.name %></td>
        <td><%= link_to "Show data", experiments_path(:exp_no=>mynewdata.id),
                                class: "btn btn-small btn-primary" %></td> 
      </tr>
      <% end %>
    
    </tbody>
  </table> 

<% end %>
