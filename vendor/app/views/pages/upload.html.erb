<% provide(:title, 'Upload + Curate') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/mynewdatum_form' %>
      </section>
    </aside>

    <div class="span8">
      <h4>Your experiments</h4>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the SocGen</h1>

    <h2>
      TraDIS web portal
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %>